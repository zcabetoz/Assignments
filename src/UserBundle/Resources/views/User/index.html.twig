{% extends 'base.html.twig' %}
{% block title %}Index | {{ parent() }}{% endblock %}
{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="col-md-12">
            <div class="page-header margin-none">
                <h1 class="no-padding">User</h1>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Username</th>
                        <th>First name</th>
                        <th>Last name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Created</th>
                        <th>Updated</th>
                        <th>Actions</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.username }}</td>
                            <td>{{ user.firstName }}</td>
                            <td>{{ user.lastName }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                <strong>{{ user.role == 'ROLE_ADMIN' ? 'Administrator' : 'User' }}</strong>
                            </td>
                            <td>{{ user.createAt | date('d/m/y') }}</td>
                            <td>{{ user.updatedAt | date('d/m/y') }}</td>
                            <td>
                                <a href="#" class="btn btn-info">View</a>
                                <a href="#" class="btn btn-primary">Edit</a>
                                <a href="#" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}